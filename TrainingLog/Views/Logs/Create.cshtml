@using TrainingLog.ViewModels
@model LogsViewModel

@{
    ViewBag.Title = "Create new log";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.Date)
                    @Html.TextBoxFor(m => m.Date, new { @class = "form-control datepicker" })
                </div>

                <div class="form-group">
                    @Html.EditorFor(m => m.Exercises)
                </div>
            </div>
        }
    </div>
</div>