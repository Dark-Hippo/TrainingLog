@using TrainingLog.ViewModels
@model LogBookViewModel

@{
    ViewBag.Title = "Create new logbook";
}

<div class="jumbotron">
    <h1>@ViewBag.Title</h1>
</div>

<div class="row">
    <div class="col-sm-6">
        @using (Html.BeginForm())
        {
            <div class="col-sm-12">
                <div class="form-group">
                    @Html.LabelFor(m => m.Name)
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.StartDate)
                    @Html.TextBoxFor(m => m.StartDate, new { @class = "form-control datepicker" })
                </div>

                <div class="form-group">
                    <button type="submit" class="form-control btn btn-primary" value="Create" />
                </div>
            </div>
        }
    </div>
</div>